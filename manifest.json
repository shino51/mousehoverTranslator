{
  "name": "Multi Translator",
  "description": "Translate selected text to multiple languages at once",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "/js/main.js",
      "/js/jquery-3.6.0.min.js"
    ]
  },
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "contextMenus",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "/html/settings.html",
    "default_icon": "/images/get_started16.png",
    "default_title": "Multi Translator"
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
